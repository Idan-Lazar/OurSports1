@using Microsoft.AspNetCore.Identity
@using OurSports1.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <li class="nav-item nav-right pull-sm-right  align-content-end">
                <a asp-area="" class="btn btn-link nav-item nav-link active "  asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item nav-right pull-sm-right  align-content-end">
                <button type="submit" class="btn btn-link nav-item nav-link active">Log out</button>
            </li>
        
    </form>
}
else
{
    
        <li class="nav-item nav-right pull-sm-right  align-content-end"><a class="btn btn-link nav-item nav-link active" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
   

}
