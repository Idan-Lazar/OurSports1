@model OurSports1.Models.Article


@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="dropdown">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Secondary_title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Secondary_title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            <img src="~/images/@Model.Image" width="200" height="200" />

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.ID)
        <dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.ID)
        <dd>







    </dl>

    <table class="comments table">
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td>
                    <span class="label-success">@Html.DisplayNameFor(modelitem => item.Title): @Html.DisplayFor(modelitem => item.Title)  </span>
                    <span class="label-danger">  @Html.DisplayNameFor(modelitem => item.WriterName): @Html.DisplayFor(modelitem => item.WriterName)  </span>
                    <span class="label-info">@Html.DisplayNameFor(modelitem => item.Content): @Html.DisplayFor(modelitem => item.Content)  </span>



                </td>
            </tr>
        }





    </table>







    <form asp-controller="Comments" asp-action="Create" method="get" target="_blank" onclick="f()">
        <p>
            <input id="idArt" type="hidden" name="num" value="@Model.ID">
            <input class="btn-primary" type="submit" value="הוסף תגובה" />
        </p>
    </form>
    <script>
        function f(){
            var x = @Model.ID;


                window.open('/Comments/Create?num='+x, '', 'scrollbars=no,menubar=no,height=600,width=800,resizable=yes,toolbar=no,status=no');
        }
    </script>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
